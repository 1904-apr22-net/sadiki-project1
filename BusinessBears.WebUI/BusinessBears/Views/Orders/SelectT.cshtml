@model IEnumerable<BusinessBears.WebUI.Models.ProductViewModel>

@{
    ViewData["Title"] = "Order Processing 2";
}

<h4>Customer Selected: @ViewBag.CustomerName + @ViewBag.BearNumber</h4>
<hr />
<h4>How many bears will be required for this order?</h4>
<div class="row">
    <div class="col-md-4">
       
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Bear # 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @(ViewBag.BearNumber == null)
        @for (int i=0; i < ViewBag.BearNumber;i++)
        {
            <tr>
                <td>
                    @i
                </td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var item2 in Model)
            {
    <tr>
        <td></td>
        <td>
            @Html.DisplayFor(model => item2.Name)
        </td>
        <td>
            @Html.DisplayFor(model => item2.Price)
        </td>
        <td>
            @* Put some selector here. Checkbox, perhaps?  *@
        </td>
    </tr>
            }
        }
    </tbody>
</table>
